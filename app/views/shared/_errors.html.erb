<% if obj.errors.any? %>
  <div class="row sign-up-form">
    <div class="col s12 m12 l12">
      <div class="card-panel red lighten-2">
        <span class="white-text">
          <strong>
            The following <%= pluralize(@obj.errors.count, 'error')%> prevented the <%= obj.class.name.downcase %> from being saved
          </strong>
          <ul>
            <% @obj.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <%end%>
          </ul>
        </span>
      </div>
    </div>
  </div>
<% end %>
