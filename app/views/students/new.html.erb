<% if @student.errors.any? %>
<div class="container">
  <div class="row sign-up-form">
    <div class="col s12 m12 l12">
      <div class="card-panel red lighten-2" id="fade-out-target">
        <span class="white-text">
          <strong>
            <%= pluralize(@student.errors.count, 'error')%> prohibited your
            profile for being created
          </strong>
          <ul>
            <% @student.errors.full_messages.each do |msg| %>
            <li>
              <%= msg %>
            </li>
            <%end%>
          </ul>
        </span>
      </div>
    </div>
  </div>
</div>
<%end%>
<div class="container ">
  <div class="card">
    <%= form_for @student do |f|%>
    <div class="card-panel">
      <h3 class="header">Sign up!</h3>
      <br />
      <div class="row">
        <div class="input-field col s6">
          <%= f.label :name %> <%= f.text_field :name, placeholder: 'Enter your full name', autofocus: true %>
        </div>
        <div class="input-field col s6">
          <%= f.label :email %> <%= f.email_field :email, placeholder: 'Enter your email address' %>
        </div>
      </div>
      <div class="row">
        <%= f.submit "Submit", class: 'btn waves-effect waves-light right' %>
      </div>
    </div>
    <%end%>
  </div>
</div>
